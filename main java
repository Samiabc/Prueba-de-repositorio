import java.util.ArrayList;
import java.util.Scanner;
import java.io.File;
import java.util.List;

public class Main {

    private static final String FILE = "datos.json";

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        List<String> datos = cargarOIniciar();

        while (true) {
            System.out.println("\n=== MENÚ JSON ===");
            System.out.println("1. Agregar dato");
            System.out.println("2. Leer JSON");
            System.out.println("3. Salir");
            System.out.print("Opción: ");
            String op = sc.nextLine();

            switch (op) {
                case "1":
                    System.out.print("Escribe algo para guardar: ");
                    String nuevo = sc.nextLine();
                    datos.add(nuevo);
                    try {
                        JsonWriter.saveToJson(FILE, datos);
                        System.out.println("✔ Dato agregado.");
                    } catch (Exception e) {
                        e.printStackTrace();
                    }
                    break;

                case "2":
                    System.out.println("\nContenido del JSON:");
                    datos.forEach(System.out::println);
                    break;

                case "3":
                    System.out.println("Saliendo...");
                    return;

                default:
                    System.out.println("Opción inválida.");
            }
        }
    }

    private static List<String> cargarOIniciar() {
        try {
            File f = new File(FILE);
            if (!f.exists()) {
                JsonWriter.saveToJson(FILE, new ArrayList<>());
            }
            return JsonReader.readFromJson(FILE, ArrayList.class);
        } catch (Exception e) {
            e.printStackTrace();
            return new ArrayList<>();
        }
    }
}
